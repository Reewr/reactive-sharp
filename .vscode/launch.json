{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug Tests",
			"type": "coreclr",
			"request": "launch",
			"preLaunchTask": "build",
			"program": "/home/deck/builds/godot/bin/godot",
			"args": [
				// These command line flags are used by GoDotTest to run tests.
				"--run-tests",
				"--quit-on-finish"
			],
			"cwd": "${workspaceFolder}/godot.test",
			"stopAtEntry": false
		},
		{
			"name": "Debug Current Test",
			"type": "coreclr",
			"request": "launch",
			"preLaunchTask": "build",
			"program": "/home/deck/builds/godot/bin/godot",
			"args": [
				// These command line flags are used by GoDotTest to run tests.
				"--run-tests=${fileBasenameNoExtension}",
				"--quit-on-finish"
			],
			"cwd": "${workspaceFolder}/godot.test",
			"stopAtEntry": false
		}
	]
}
